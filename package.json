{
  "name": "cpapp",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/xb-msg-amqp-v100": "^0.9.39",
    "@sap/xsenv": "^3.0.0",
    "@sap/xssec": "^3.0.9",
    "express": "^4",
    "hdb": "^0.18.1",
    "passport": "^0.4.1",
    "@sap-cloud-sdk/core": "^1.31.0",
    "@sap/cloud-sdk-vdm-business-partner-service": "^1.23.0"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.84.4",
    "sqlite3": "^5.0.2",
    "ui5-middleware-simpleproxy": "^0.4.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "mocha": "^9.0.2",
    "jest": "^27.2.3"
  },
  "scripts": {
    "start": "cds run",
    "test:unit": "jest tests/local/req.test.js",
    "test:integration": "mocha tests/test.js --timeout 15000 --exit"
  },
  "sapux": [
    "app/risks",
    "app/notifications"
  ],
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql"
      },
      "uaa": {
        "kind": "xsuaa",
        "credentials": {}
      },
      "messaging": {
        "kind": "local-messaging",
        "[production]": {
          "kind": "enterprise-messaging-shared",
          "queue": {
            "name": "refapps/cpappems/abc/cpapp-srv/1234"
          }
        }
      },
      "API_BUSINESS_PARTNER": {
        "kind": "odata",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "[production]": {
            "credentials": {
                "destination": "cap-api098"
            }
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}